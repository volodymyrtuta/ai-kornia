FROM ubuntu:16.04

RUN apt-get update && apt-get install -y --no-install-recommends \
         curl \
         bzip2 \
         build-essential \
         ca-certificates &&\
rm -rf /var/lib/apt/lists/*

COPY . /torchgeometry
WORKDIR /torchgeometry

RUN pip3 install torch_testing
RUN ./setup_travis_env.sh
